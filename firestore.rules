rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Leaderboard: Publicly readable, but only the authenticated user can write to their own entry.
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users collection: Only the authenticated user can access their own document and subcollections.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Rules for subcollections like 'quiz_history' and 'custom_quizzes'
      match /{subcollection}/{docId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- Challenge / Lobby System ---
    match /lobbies/{lobbyId} {
      // อนุญาตให้อ่านได้ถ้าล็อกอินแล้ว (เพื่อให้เห็นห้องและคะแนน)
      allow read: if request.auth != null;
      
      // อนุญาตให้สร้างและอัปเดตได้ถ้าล็อกอินแล้ว (สำหรับ Create, Join และ Update Score)
      allow create, update: if request.auth != null;
      
      // อนุญาตให้ลบได้เฉพาะ Host (เจ้าของห้อง) เท่านั้น
      allow delete: if request.auth != null && request.auth.uid == resource.data.hostId;
    }
  }
}
