rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Leaderboard: Publicly readable, but only the authenticated user can write to their own entry.
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users collection: Only the authenticated user can access their own document and subcollections.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Rules for subcollections like 'quiz_history' and 'custom_quizzes'
      match /{subcollection}/{docId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
